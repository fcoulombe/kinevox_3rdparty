SET(DepName "gclfreetype")
FIND_PACKAGE(Freetype QUIET)
IF (FREETYPE_FOUND)
	SET(${DepName}_INCLUDE_DIR ${FREETYPE_INCLUDE_DIRS})
	list(APPEND ${DepName}_LIBS ${FREETYPE_LIBRARY})
ELSE()
    SET(FREETYPE_ROOT "${CMAKE_CURRENT_LIST_DIR}/../binaries/${CMAKE_SYSTEM_NAME}${CMAKE_CXX_COMPILER_ID}${KINEVOX_ARCHITECTURE}/usr/local/")
	SET(LPATH ${FREETYPE_ROOT}/lib/)
	SET(LIB_NAME "freetype")

	SET(FREETYPE_INCLUDE_DIRS ${FREETYPE_ROOT}/include)
	FindLibrary(FREETYPE_LIBRARY ${LIB_NAME} ${LPATH})
	SET(${DepName}_INCLUDE_DIR ${FREETYPE_INCLUDE_DIRS} )
	list(APPEND ${DepName}_LIBS ${FREETYPE_LIBRARY})
	#message("freetype!!!" ${LPATH} ${LIB_NAME} ${FREETYPE_LIBRARY})
ENDIF()	
